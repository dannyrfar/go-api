{
  "name": "go-api",
  "version": "1.0.0",
  "description": "npm package",
  "main": "serve.sh",
  "scripts": {
    "go-compile":"cd ../server && go get && go build -o ../go-server",
    "node_compile":"cd ui && ng build --output-path ../dist",
    "compile": "",
    "server": "cd server && gin --port 4201 --path . --build . --i --all",
    "client": "cd ui && ng serve",
    "start": "concurrently \"npm run server\" \"npm run client\" ",
    "getgodeps": "go get ./...",
    "getnodedeps": "cd ui && npm install",
    "getdeps": "concurrently \"npm run getgodeps\" \"npm run getnodedeps\" ", 
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/dannyrfar/go-api.git"
  },
  "devDependencies": {
    "concurrently": "^1.0.0"
  },
  "author": "Danny Farah",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/dannyrfar/go-api/issues"
  },
  "homepage": "https://gitlab.com/dannyrfar/go-api#README"
}
